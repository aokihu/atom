{
  "tools": {
    "read": {
      "allow": ["^{workspace}/.*", "^{workspace}/src/.*"],
      "deny": ["^{workspace}/.*/secret.*"]
    },
    "ls": {
      "allow": ["^{workspace}/.*"],
      "deny": ["^{workspace}/.*/secret.*"]
    },
    "tree": {
      "allow": ["^{workspace}/.*"],
      "deny": ["^{workspace}/.*/secret.*"]
    },
    "ripgrep": {
      "allow": ["^{workspace}/.*"],
      "deny": ["^{workspace}/.*/secret.*"]
    },
    "write": {
      "allow": ["^{workspace}/Playground/.*", "^{workspace}/tmp/.*"],
      "deny": ["^{workspace}/src/.*"]
    },
    "webfetch": {
      "allow": ["^https://(docs\\.|developer\\.)?example\\.com/.*"],
      "deny": ["^https?://(localhost|127\\.0\\.0\\.1)(:.*)?/.*"]
    }
  }
}
