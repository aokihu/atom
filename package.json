{
  "name": "atom",
  "module": "index.ts",
  "description": "Atom 智能生命体",
  "type": "module",
  "version": "0.14.0",
  "scripts": {
    "dev": "bun run src/index.ts --workspace=./Playground",
    "test:server-chat": "bun run src/scripts/server_chat_eval.ts ./Playground 8789",
    "build:bin": "mkdir -p dist && VERSION=$(bun --print 'JSON.parse(await Bun.file(\"package.json\").text()).version') && bun build src/index.ts --compile --minify --define BUILD_VERSION=\\\"$VERSION\\\" --outfile dist/atom",
    "typecheck": "bun x tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^22.19.13"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/deepseek": "^2.0.20",
    "@ai-sdk/mcp": "^1.0.21",
    "@ai-sdk/openai-compatible": "^2.0.30",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "@opentui/core": "^0.1.84",
    "@preact/signals-core": "^1.13.0",
    "@toon-format/toon": "^2.1.0",
    "ai": "^6.0.103",
    "openai": "^6.25.0",
    "radashi": "^12.7.2",
    "zod": "^4.3.6"
  }
}
